@using LeMaiDomain.Models;
@{
    ViewData["Title"] = "Giới thiệu";
    Layout = "_Layout_Fas";
	var webConfig = ViewData["webconfig"] as WebOption;
}

<!-- Start of Breadcrumb section
	============================================= -->
<section id="ft-breadcrumb" class="ft-breadcrumb-section position-relative" data-background="assets/img/bg/bread-bg.jpg">
	<span class="background_overlay"></span>
	<span class="design-shape position-absolute"><img src="~/assets/img/shape/tmd-sh.png" alt=""></span>
	<div class="container">
		<div class="ft-breadcrumb-content headline text-center position-relative">
			<h2>Liên Hệ</h2>
			<div class="ft-breadcrumb-list ul-li">
				<ul>
					<li><a href="#">Home</a></li>
					<li>Liên hệ</li>
				</ul>
			</div>
		</div>
	</div>
</section>
<!-- End of Breadcrumb section
	============================================= -->
<!-- Start of contact page section
	============================================= -->
<section id="ft-contact-page" class="ft-contact-page-section page-padding">
	<div class="container">
		<div class="ft-contact-page-content">
			<div class="row">
				<div class="col-lg-6">
					<div class="ft-contact-page-text-wrapper">
						<div class="ft-section-title-2 headline pera-content">
							<span class="sub-title">Gửi yêu cầu vận chuyển</span>
							<h2>
								Để được tư vấn từ chúng tôi
							</h2>
						</div>
						<div class="ft-contact-page-contact-info">
							<div class="ft-contact-cta-items d-flex">
								<div class="ft-contact-cta-icon d-flex align-items-center justify-content-center">
									<i class="fal fa-map-marker-alt"></i>
								</div>
								<div class="ft-contact-cta-text headline pera-content">
									<h3>Trụ sở</h3>
									<p>
										@webConfig.COMPANY_ADDRESS
									</p>
								</div>
							</div>
							<div class="ft-contact-cta-items d-flex">
								<div class="ft-contact-cta-icon d-flex align-items-center justify-content-center">
									<i class="fas fa-phone-alt"></i>
								</div>
								<div class="ft-contact-cta-text headline pera-content">
									<h3>Điện thoại liên lạc</h3>
									<p>@webConfig.COMPANY_FOOTER_PHONE</p>
								</div>
							</div>
							<div class="ft-contact-cta-items d-flex">
								<div class="ft-contact-cta-icon d-flex align-items-center justify-content-center">
									<i class="far fa-envelope"></i>
								</div>
								<div class="ft-contact-cta-text headline pera-content">
									<h3>Hộp thư email</h3>
									<p>@webConfig.COMPANY_EMAIL</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="ft-contact-page-form-wrapper headline">
						<h3 class="text-center">Yêu cầu vận chuyển</h3>
						<form action="#">
							<div class="row">
								<div class="col-lg-6">
									<input type="text" name="name" placeholder="Tên bạn">
								</div>
								<div class="col-lg-6">
									<input type="text" name="phone" placeholder="Số điện thoại">
								</div>
								<div class="col-lg-6">
									<input type="text" name="name" placeholder="Tên hàng hóa">
								</div>
								<div class="col-lg-6">
									<input type="text" name="phone" placeholder="Email/Facebook">
								</div>
								<div class="col-lg-12">
									<input type="text" name="address" placeholder="Địa chỉ">
								</div>
								<div class="col-lg-12">
									<textarea name="note" placeholder="Mô tả yêu cầu vận chuyển mà bạn cần. Vd: Cần vận chuyển 05 tấn hàng từ Hà Nội về Đồng Tháp"></textarea>
								</div>
								<div class="col-lg-12">
									<button>Gửi ngay</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- End of contact page section
	============================================= -->
<!-- End of Testimonial section ============================================= -->
@section menu
    {
    <partial name="_LayoutMenu" model="null" view-data="ViewData" />
}
@section menumobile
    {
	<partial name="_LayoutMenuMobile" model="null" view-data="ViewData" />
}