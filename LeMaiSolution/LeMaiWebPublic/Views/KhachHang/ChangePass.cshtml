@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Lê Mai Carry - Cập nhật mật khẩu</title>
        <link rel="shortcut icon" href="~/assets/img/logo/favicon.png" type="image/x-icon">
        <link href="~/khachhang/css/styles.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">ĐỔI MẬT KHẨU</h3></div>
                                    <div class="card-body">
                                        <div class="small mb-3 text-muted">Thay đổi mật khẩu đăng nhập hệ thống</div>
                                        <form action="ChangePass" controller="KhachHang" method="post">
                                            <div class="form-floating mb-3">
                                            <input class="form-control" name="oldPass" type="password" />
                                                <label for="inputEmail">Mật khẩu cũ</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                            <input class="form-control" name="newPass" type="password" />
                                                <label for="inputEmail">Mật khẩu mới</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                            <input class="form-control" name="rePass" type="password" />
                                                <label for="inputEmail">Nhập lại mật khẩu mới</label>
                                            </div>
                                            <div class="form-check mb-3" style="color:red">
                                            <label>@ViewBag.ShowErros</label>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small"></a>
                                            <button type="submit" class="btn btn-primary">Cập nhật mật khẩu</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a asp-controller="KhachHang" asp-action="Index">Trở về</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small" style="color:white !important">
                            <div class="text-muted" style="color:white !important">Copyright &copy; Lê Mai Carry 2023</div>
                            <div>
                                <a asp-action="Privacy" asp-controller="KhachHang" style="color:white !important">Chính sách bảo mật</a>
                            </div>

                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/khachhang/js/scripts.js"></script>
    </body>
</html>
